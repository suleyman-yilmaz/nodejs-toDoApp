<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do App | Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: background-color 0.3s, color 0.3s;
            background-color: var(--body-background);
        }

        .container {
            max-width: 400px;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 0 17px 10px rgb(0 0 0 / 30%);
            background-color: var(--container-background);
            color: var(--text-color);
        }

        .btn-primary {
            background: var(--btn-background);
            border: none;
            border-radius: 0.5rem;
        }

        .form-label {
            color: var(--text-color);
        }

        .night-mode {
            --body-background: #343a40;
            --container-background: #495057;
            --text-color: #f8f9fa;
            --btn-background: #007bff;
            /* Gece modunda buton rengi */
            --link-color: #f8f9fa;
            /* Gece modunda bağlantı rengi */
        }

        .day-mode {
            --body-background: #ffffff;
            --container-background: #ffffff;
            --text-color: #212529;
            --btn-background: #007bff;
            /* Gündüz modunda buton rengi */
            --link-color: #007bff;
            /* Gündüz modunda bağlantı rengi */
        }

        .theme-toggle {
            position: absolute;
            top: 1rem;
            right: 1rem;
            cursor: pointer;
        }

        .theme-toggle i {
            font-size: 1.5rem;
            color: var(--text-color);
        }

        .text-muted {
            color: var(--link-color) !important;
        }
    </style>
</head>

<body class="day-mode">
    <div class="theme-toggle" onclick="toggleTheme()">
        <i class="ri-moon-fill" id="theme-icon"></i>
    </div>
    <div class="container">
        <h2 class="text-center mb-4">Kullanıcı Girişi</h2>
        <form action="/login" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Kullanıcı Adı</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="ri-user-fill"></i></span>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Kullanıcı Adı"
                        required>
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="ri-lock-fill"></i></span>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Şifre"
                        required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        </form>
        <div class="mt-3 text-center">

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleTheme() {
            const body = document.body;
            const themeIcon = document.getElementById('theme-icon');
            if (body.classList.contains('night-mode')) {
                body.classList.remove('night-mode');
                body.classList.add('day-mode');
                themeIcon.classList.remove('ri-sun-fill');
                themeIcon.classList.add('ri-moon-fill');
            } else {
                body.classList.remove('day-mode');
                body.classList.add('night-mode');
                themeIcon.classList.remove('ri-moon-fill');
                themeIcon.classList.add('ri-sun-fill');
            }
        }
    </script>
</body>

</html>